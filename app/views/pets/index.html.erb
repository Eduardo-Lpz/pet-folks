<div class="grid grid-cols-4 gap-y-12">
  <div class="col-span-4">
    <div class="lg:flex lg:items-center lg:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          <%= @shelter.name %>
        </h2>
        <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <!-- tabler-icons name: dog-bowl -->
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-1.5 h-5 w-5 icon icon-tabler icon-tabler-dog-bowl" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M10 15l5.586 -5.585a2 2 0 1 1 3.414 -1.415a2 2 0 1 1 -1.413 3.414l-3.587 3.586"></path>
              <path d="M12 13l-3.586 -3.585a2 2 0 1 0 -3.414 -1.415a2 2 0 1 0 1.413 3.414l3.587 3.586"></path>
              <path d="M3 20h18c-.175 -1.671 -.046 -3.345 -2 -5h-14c-1.333 1 -2 2.667 -2 5z"></path>
            </svg>
            <%= "#{pluralize(@pets.count, "pet")} waiting for adoption" %>
          </div>
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <!-- Heroicon name: solid/location-marker -->
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <%= "#{pluralize(@pets.count, "adoption")} requested" %>
          </div>
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <!-- Heroicon name: solid/calendar -->
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            <%= "#{pluralize(@pets.count, "match")} found" %>
          </div>
        </div>
      </div>
      <div class="mt-5 flex lg:mt-0 lg:ml-4">
        <span class="sm:ml-3">
          <%= link_to new_polymorphic_path([current_user, current_user.userable, Pet]), class:"inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Add pet
          <% end %>
        </span>
      </div>
    </div>
  </div>
  <div class="col-span-4">
    <div class="grid grid-cols-4 gap-6" data-controller="pet-alert">
      <% @pets.each do |pet| %>
        <div class="group relative col-span-4 sm:col-span-2 lg:col-span-1 shadow-lg rounded-md my-2">
          <div class="w-full min-h-80 bg-gray-200 aspect-w-1 aspect-h-1 overflow-hidden lg:h-80 lg:aspect-none rounded-t-md">
            <% if pet&.images_attachments&.present? %>
              <%= image_tag pet&.images_attachments&.first, class:"w-full h-full object-center object-cover" %>
            <% else %>
              <img src="https://www.myhappypet.es/sites/spmhp/files/adoptar.png" alt="Adopt" class="w-full h-full object-center object-cover group-hover:opacity-75">
            <% end %>
            <%= link_to edit_polymorphic_path([current_user, current_user.userable, pet]), class:"absolute top-1/3 left-1/4 w-1/5 bg-indigo-600 bg-opacity-75 py-2 px-4 rounded-full text-sm text-white opacity-0 group-hover:opacity-100 focus:opacity-100" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
            <% end %>
            <%# link_to t(".delete"),
              list_list_file_log_path(@list, list_file_log),
              class: "font-semibold text-red-500 hover:text-red-600",
              method: :delete,
              data: { confirm: t(".confirmation") }
            %>
            <%# <% binding.irb %>
            <%= link_to polymorphic_path([current_user, current_user.userable, pet]), data: { "turbo_confirm": "Are you sure?", "turbo-method": :delete }, class:"absolute top-1/3 right-1/4 w-1/5 bg-indigo-600 bg-opacity-75 py-2 px-4 rounded-full text-sm text-white opacity-0 group-hover:opacity-100 focus:opacity-100" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
          <%# polymorphic_path([current_user, current_user.userable, pet]) %>
          <%# button_to "boton aver", polymorphic_path([current_user, current_user.userable, pet]), data: { "turbo_confirm": "Are you sure?", "turbo-method": :delete } %>
          <%# button_to "turbo-method", polymorphic_path([current_user, current_user.userable, pet]), data: { turbo_method: :delete, turbo_confirm: "Are you sure?", action: "click->pet-alert#alert" } %>
          <%# button_to "stimulus", polymorphic_path([current_user, current_user.userable, pet]), method: :delete, data: { "data-action": "click->pet-alert#alert" } %>
          <%# link_to "ENLACE", polymorphic_path([current_user, current_user.userable, pet]), data: { action: "click->pet-alert#next", "turbo-method": :delete } %>
          <%# link_to "ABER", polymorphic_path([current_user, current_user.userable, pet]), data: { "turbo_confirm": "Are you sure?", "turbo-method": :delete } %>
          <%# button_to "sadf", polymorphic_url([current_user, current_user.userable, pet]), class:"bg-indigo-600 bg-opacity-75 py-2 px-4 rounded-full text-sm text-white", method: :delete, data: { confirm: "sadfa sdfasdf asdf" } %>
          <%# button_to polymorphic_path([current_user, current_user.userable, pet]), method: :delete, "data-turbo": false, data: { confirm: "Are you sure?" } do %>
            <%# <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg> %>
          <%# end %>
          <%# <button type="button"

            class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm"
            data-action="click->pet-alert#next"
          >
            Deactivate
          </button> %>
          <div class="grid grid-cols-4 justify-items-center">

            <div class="col-span-4 mt-4 mb-2">
              <p class="text-xl font-medium text-indigo-600">
                <%= pet.name.camelize %>
              </p>
            </div>

            <div class="col-span-4">
              <p class="text-sm font-light">
                <%= pet.age.camelize %> &#183 <%= pet.breed.camelize %>
              </p>
            </div>

            <div class="col-span-4 mb-4">
              <p class="text-sm font-light">
                1 mile away
              </p>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
