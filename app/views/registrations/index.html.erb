<div class="sm:flex flex-wrap justify-center items-center text-center gap-8">
  <div class="w-full sm:w-1/2 md:w-1/2 lg:w-1/4 px-4 py-4 bg-slate-900 mt-6  shadow-lg rounded-lg hover:opacity-75">
    <%= link_to new_rescuer_path do %>
      <div class="flex-shrink-0">
        <div class="flex items-center mx-auto justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <polyline points="5 12 3 12 12 3 21 12 19 12"></polyline>
